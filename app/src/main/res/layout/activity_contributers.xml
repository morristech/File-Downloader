<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.amqtech.zipdownloader.contributors.Contributors">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp">

        <com.pkmmte.view.CircularImageView
            android:id="@+id/david_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/david"
            android:layout_gravity="center"
            app:border="true"
            app:border_color="#000000"
            app:border_width="2dp"
            app:shadow="true" />

        <TextView
            android:id="@+id/david_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/contributor_name_david"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/david_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="20dp"
            android:text="@string/contributor_info_david"
            android:textColor="#000000"
            android:textSize="16sp" />

        <com.pkmmte.view.CircularImageView
            android:id="@+id/andrew_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/andrew"
            android:layout_gravity="center"
            app:border="true"
            app:border_color="#000000"
            app:border_width="2dp"
            app:shadow="true" />

        <TextView
            android:id="@+id/andrew_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/contributor_name_andrew"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/andrew_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="20dp"
            android:text="@string/contributor_info_andrew"
            android:textColor="#000000"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>
